extends layout

block content
  link(rel='stylesheet', href='/stylesheets/register.css')
  nav
    img#lupa_img_nav.lupa_nav(src='../images/home_page/lupa.png')
    input#input_search_nav.input_search_nav
    a(href='personajes')
      #personajes_nav.personajes_nav PERSONAJES
    a(href='album')
      #album_nav.album_nav ALBUMS
    a(href='mi_album')
      #mi_album_nav.mi_album_nav MI ALBUM
    a(href='register')
      img#cuenta_nav.cuenta_nav(src='../images/home_page/account.png')

  main
    a(href='/')
      img.logo_main(src='../images/home_page/logoMarvel.png')
    .container.margen
      #columnas_personajes(style='display: flex; justify-content: space-around;')
        .card.text-black.bg-secondary.border-dark.mb-3(style='width: 75%; height: 100%;')
          .card-header.title BIENVENIDO A LA MARVEL WIKI
          if errorContenido != null
            .alert.alert-danger(style='margin-top: 1em; margin-left: 1em; margin-right: 1em;')
              strong #{errorContenido}

          .card-body
            h2.card-subtitle.center(style='margin-bottom: 0.5em; font-size: 3em;  text-align: center;') REGISTRATE PARA ACCEDER A TODO EL CONTENIDO
            h4.card-subtitle.center
              | &iquest;Ya tienes cuenta?
              a.inicia_sesion(href='/login')   Inicia sesi&oacute;n
            br
            form.custom-form(action method='post' role='form')
              .form-group
                label.card-subtitle(for="nombre") Nombre
                input#nombre.form-control(type='text' name="nombre" placeholder='Nombre')
              .form-group
                label.card-subtitle(for='apellidos') Apellidos
                input#apellidos.form-control(type='text' placeholder='Apellidos' name='apellidos')
              .form-group
                label.card-subtitle(for='username') Nombre de usuario
                input#username.form-control(type='text' placeholder='Nombre de usuario' name='username')
              .form-group
                label.card-subtitle(for='telefono') Telefono
                input#telefono.form-control(type='text' placeholder='Telefono' name='telefono')
              .form-group
                label.card-subtitle(for='email') Correo electr&oacute;nico
                input#email.form-control(type='text' placeholder='Correo electrónico' name='email')
              .form-group
                label.card-subtitle(for='password') Contrase&ntilde;a
                input#password.form-control(type='password' placeholder='Contraseña'  name='password')
              .form-group.text-center
                button.btn.btn-outline-dark.btn-danger(type='submit' style='width: 80%') Registrarse

  


    
     
     




     
 

